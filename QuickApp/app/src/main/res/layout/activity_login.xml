<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bg_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_background_authenticate"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/logo"
                app:layout_constraintTop_toTopOf="@+id/logo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:text="The Tolet"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Find Your House"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintTop_toBottomOf="@id/bg_header"
        android:paddingBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14dp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            app:layout_constraintTop_toBottomOf="@id/tvError"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            android:hint="User name"
            android:textColorHint="#475569"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14dp"
            android:backgroundTint="#CBD5E1"
            android:paddingBottom="20dp"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            app:layout_constraintTop_toBottomOf="@id/edtUserName"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPassword"
            android:hint="Password"
            android:textColorHint="#475569"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14dp"
            android:backgroundTint="#CBD5E1"
            android:paddingBottom="20dp"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPassword"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Forgot?"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/edtPassword"
            android:layout_marginTop="15dp"
            android:text="Log in"
            android:background="@drawable/radius_button_dark"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or continue with"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14dp"
            android:textColor="#8A8A8A"
            app:layout_constraintBottom_toTopOf="@id/btnGoogle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/btnGoogle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutSingUp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/radius_button_associate"
            android:gravity="center"
            android:text="Google"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/btnFb"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutSingUp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/radius_button_associate"
            android:gravity="center"
            android:text="Facebook"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/layoutSingUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have account?"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14dp"
                android:textColor="#8A8A8A"/>
            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create now"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>